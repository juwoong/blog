---
import { Image } from 'astro:assets';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import TagDescription from '../components/TagDescription.astro';
import { getTranslations, type LanguageCode } from '../i18n';

interface Props {
	title: string;
	description: string;
	pubDate: Date;
	updatedDate?: Date;
	heroImage?: ImageMetadata;
	tags?: string[];
	location?: string;
	lang?: LanguageCode;
}

const { title, description, pubDate, updatedDate, heroImage, tags, location, lang = 'ko' } = Astro.props;
const t = getTranslations(lang);
---

<html lang={lang}>
	<head>
		<BaseHead title={title} description={description} pubDate={pubDate} tags={tags} location={location} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
				padding-top: 0;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				color: rgb(var(--gray-dark));
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
				font-size: 2em;
				font-weight: 600;
				color: rgb(var(--black));
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray-date));
			}
			.last-updated-on {
				font-style: italic;
			}
			@media (max-width: 720px) {
				.title h1 {
					font-size: 1.8em;
				}
			}
		</style>
	</head>

	<body>
		<Header lang={lang} />
		<main>
			<article>
				<div class="prose">
					<div class="title">
						<h1>{title}</h1>
						<div class="date">
							<FormattedDate date={pubDate} lang={lang} />
							{
								updatedDate && (
									<div class="last-updated-on">
										{t.ui.lastUpdatedOn} <FormattedDate date={updatedDate} lang={lang} />
									</div>
								)
							}
						</div>
						<TagDescription tags={tags} lang={lang} />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer lang={lang} />
	</body>
</html>
