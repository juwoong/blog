---
import { formatTagDescription, type LanguageCode } from '../i18n';

interface Props {
  tags?: string[];
  lang?: LanguageCode;
}

const { tags, lang = 'ko' } = Astro.props;
---

{tags && tags.length > 0 && (
  <p class="tag-description">{formatTagDescription(tags, lang)}</p>
)}

<style>
  .tag-description {
    color: rgb(var(--gray));
    font-size: 1em;
    margin: 0.5em 0 0 0;
  }
</style>
