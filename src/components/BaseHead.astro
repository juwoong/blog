---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';
import type { ImageMetadata } from 'astro';
import FallbackImage from '../assets/blog-placeholder-1.jpg';
import { getLanguageFromURL, getTranslations, getLocale, getAlternateLanguagePath, getTagLabel } from '../i18n';

interface Props {
	title: string;
	description: string;
	image?: ImageMetadata;
	pubDate?: Date;
	tags?: string[];
	location?: string;
}

const { title, description, image, pubDate, tags, location } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const lang = getLanguageFromURL(Astro.url.pathname);
const t = getTranslations(lang);
const locale = getLocale(lang);
const alternate = getAlternateLanguagePath(Astro.url.pathname, lang);
const alternateURL = new URL(alternate.path, Astro.site);

// Korean version URL for x-default (always the Korean version)
const koreanPath = lang === 'ko' ? Astro.url.pathname : Astro.url.pathname.replace(/^\/en/, '') || '/';
const koreanURL = new URL(koreanPath, Astro.site);

// 아티클인 경우 동적 OG 이미지 생성, 아니면 기본 이미지 사용
let ogImage: string;
if (pubDate) {
	const dateStr = pubDate.toLocaleDateString(locale, { year: 'numeric', month: 'long', day: 'numeric' });
	const tagsStr = tags?.map(tag => getTagLabel(tag, lang)).join(',') || '';
	const params = new URLSearchParams({
		title,
		date: dateStr,
		tags: tagsStr,
	});
	if (location) {
		params.set('location', location);
	}
	ogImage = `https://og-generator-sigma.vercel.app/api/og?${params.toString()}`;
} else {
	ogImage = image?.src
		? new URL(image.src, Astro.site).toString()
		: new URL(FallbackImage.src, Astro.site).toString();
}

// OG locale format (ko_KR, en_US)
const ogLocale = locale.replace('-', '_');
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
	rel="alternate"
	type="application/rss+xml"
	title={t.site.title}
	href={new URL(lang === 'en' ? 'en/rss.xml' : 'rss.xml', Astro.site)}
/>
<meta name="generator" content={Astro.generator} />

<!-- Language alternates -->
<link rel="alternate" hreflang="ko" href={koreanURL} />
<link rel="alternate" hreflang="en" href={lang === 'en' ? canonicalURL : new URL(`/en${Astro.url.pathname}`, Astro.site)} />
<link rel="alternate" hreflang="x-default" href={koreanURL} />

<!-- Font preloads -->
<link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
<link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />

<!-- KaTeX -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.11/dist/katex.min.css" crossorigin="anonymous">

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description || t.site.description} />
<meta name="author" content={t.site.title} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:site_name" content={t.site.title} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description || t.site.description} />
<meta property="og:image" content={ogImage} />
<meta property="og:locale" content={ogLocale} />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={Astro.url} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description || t.site.description} />
<meta name="twitter:image" content={ogImage} />

<!-- Google Analytics -->
<script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-NYPLPDJGCE"></script>
<script is:inline>
	window.dataLayer = window.dataLayer || [];
	function gtag(){dataLayer.push(arguments);}
	gtag('js', new Date());
	gtag('config', 'G-NYPLPDJGCE');
</script>
