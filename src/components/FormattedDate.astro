---
import { getLocale, type LanguageCode } from '../i18n';

interface Props {
	date: Date;
	lang?: LanguageCode;
}

const { date, lang = 'ko' } = Astro.props;
const locale = getLocale(lang);
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString(locale, {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
